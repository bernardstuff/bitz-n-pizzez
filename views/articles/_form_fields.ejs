<div class="form-group mt-4 form-floating">
  <input type="text" name="title" id="title" class="btn-outline-secondary form-control text-light bg-dark" required autocomplete="off" placeholder="Title">
  <label for="title">Title</label>
</div>

<div class="form-group mt-4 form-floating">
  <textarea class="btn-outline-secondary form-control text-light bg-dark" name="description" id="description" autocomplete="off" placeholder="Description" style="height: 150px"></textarea>
  <label for="description">Description</label>
</div>

<div class="form-group mt-4 form-floating">
  <textarea class="btn-outline-secondary form-control text-light bg-dark" name="content" id="content" autocomplete="off" placeholder="Markdown Content" style="height: 250px"></textarea>
  <label for="content">Markdown Content</label>
</div>

<div class="form-group mt-4">
  <label for="image">Featured Image</label>
  <input type="file" name="file" id="file" class="btn-outline-secondary form-control text-light bg-dark">
</div>

<div class="form-group mt-4">
  <a href="/" class="btn-outline-secondary btn btn-danger text-light"><i class="bi bi-x-circle-fill"></i> Cancel</a>
  <button type="submit" class="btn btn-primary"><i class="bi bi-hdd-fill"></i> Save</button>
</div>
